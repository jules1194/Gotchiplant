void loop() {
  if (counter < 3) {
    counter = counter + 1;
  } else {
    counter = 0;
  }

  Serial.print("Seleccion: ");
  Serial.println(counter);

  switch (counter) {
    case 0:
      readTemperature();
      break;
    case 1:
      readHumidity();
      break;
    case 2:
      readHigro();
      break;
    case 3:
      readLight();
      break;
    default:
      break;
  }
}

